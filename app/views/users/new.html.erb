<h1>Signup! &raquo;</h1>

<div class="container">
  <div class="col-md-8">
    <%= form_for :user, url: '/users' do |f| %>

      First Name: <%= f.text_field :first_name, class: 'form-control'  %>
      <br></br>
      Last Name: <%= f.text_field :last_name, class: 'form-control'   %>
      <br></br>
      Email: <%= f.text_field :email, class: 'form-control email'  %>
      <br></br>
      Password: <%= f.password_field :password, class: 'form-control password'  %>
      <br></br>
      Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control password' %>
      <br></br>
      <%= f.submit "Submit", class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>